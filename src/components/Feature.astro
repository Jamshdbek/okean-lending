---
interface Props {
	title: string;
	description: string;
	icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="feature">
	<div class="icon">
		<img src={icon} alt={title} />
	</div>
	<h3>{title}</h3>
	<p>{description}</p>
</div>

<style>
	.feature {
		background: white;
		padding: 2.5rem;
		border-radius: 16px;
		text-align: center;
		box-shadow: 0 10px 30px rgba(0,0,0,0.1);
		transition: all 0.3s ease;
	}
	.feature:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 35px rgba(0,0,0,0.15);
	}
	.icon {
		width: 80px;
		height: 80px;
		margin: 0 auto 1.5rem;
	}
	.icon img {
		width: 100%;
		height: 100%;
		object-fit: contain;
	}
	h3 {
		color: var(--text-primary);
		margin-bottom: 1rem;
		font-size: 1.75rem;
		font-weight: 600;
	}
	p {
		color: var(--text-secondary);
		line-height: 1.6;
		font-size: 1.125rem;
	}
</style>